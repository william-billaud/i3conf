general {
        colors = true
        interval = 5
        color_good = "#81a1c1" # Light green
        color_degraded = "#fafe7c" # Light yellow
        color_bad = "#ff7770" # Light red
}
order += "volume master"
order += "memory"
#order += "ipv6"
order += "disk /"
order += "disk /home"
# order += "disk /media/william/DATA/"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "ï‡« (%quality @ %essid) %ip"
        format_down = "ï‡« down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage"
        low_threshold = 15
	hide_seconds = true
	integer_battery_capacity = true
	last_full_capacity = true
        status_chr = "+ï‰ +"
        status_bat = "ï‰"
        status_full = "ï‰€"
}

tztime local {
        format = "ï³ %a %Y-%m-%d ï€—%H:%M"
}

load {
	format = "%1min %5min %15min"        
}

disk "/" {
        format = "/ %avail"
}

disk "/home" {
        format = "/home %avail"
}

disk "/media/william/DATA/" {
